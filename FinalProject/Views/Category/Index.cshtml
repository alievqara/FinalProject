@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category List";
    int counter = 1;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                <div class="d-flex align-items-center justify-content-between m-2">
                    <h6 class="mb-4">Category List Table</h6>
                    <a class="btn btn-outline-light" asp-action="Create">Create New</a>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">№</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Category isMain?</th>
                            <th scope="col">Created Date</th>
                            <th scope="col">Creator Name</th>
                            <th scope="col">Updated Date</th>
                            <th scope="col">Updator Name</th>
                            <th scope="col">Lists</th>
                            <th scope="col">Settrings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model)
                        {
                                <tr>
                                    <th scope="row">@(counter++)</th>
                                    <td>@category.Name</td>
                                    <td>@category.isMain.ToString()</td>
                                    <td>@category.CreatedTime.ToString()</td>
                                    <td>@category.CreatorName</td>
                                    <td>@category.EditedTime.ToString()</td>
                                    <td>@category.EditorName</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-info" asp-action="phonelist" asp-route-id="@category.Id">Phone List</a>
                                        <a class="btn btn-sm btn-outline-info" asp-action="complist" asp-route-id="@category.Id">Computer List</a>
                                        <a class="btn btn-sm btn-outline-info" asp-action="otherlist" asp-route-id="@category.Id">Other Product List</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-warning" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>