@model IEnumerable<Computer>

@{
    ViewData["Title"] = "Comp List";
    int counter = 1;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <div class="d-flex align-items-center justify-content-between m-2">
                        <h6 class="mb-4">Category List Table</h6>
                        <a class="btn btn-outline-light" asp-action="Create">Create New</a>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">№</th>
                                <th scope="col">Computer Brand Name</th>
                                <th scope="col">Computer  Model Name</th>
                                <th scope="col">Computer  Ram & Storage</th>
                                <th scope="col">Computer  S/N Number</th>
                                <th scope="col">Computer  Detail</th>
                                <th scope="col">Created Date</th>
                                <th scope="col">Creator Name</th>
                                <th scope="col">Updated Date</th>
                                <th scope="col">Updator Name</th>
                                <th scope="col">Settrings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Computer computer in Model)
                            {
                                <tr>
                                    <th scope="row">@(counter++)</th>
                                    <td>@computer.Brand_Name</td>
                                    <td>@computer.Model_Name</td>
                                    <td>@computer.Ram / @computer.Storage</td>
                                    <td>@computer.SN_Seria</td>
                                    <td>@computer.Detail</td>
                                    <td>@computer.CreatedTime.ToString()</td>
                                    <td>@computer.CreatorName</td>
                                    <td>@computer.EditedTime.ToString()</td>
                                    <td>@computer.EditorName</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-warning" asp-action="Update" asp-route-id="@computer.Id">Update</a>
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Delete" asp-route-id="@computer.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>