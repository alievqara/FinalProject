@model Musteri

@{

}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cash Sale Product</h4>
            <form method="post" class="form-sample">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Name" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Surname" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Surname" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="FatherName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="FatherName" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Tel" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Tel" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">Sale</button>
                <a class="btn btn-primary btn-lg font-weight-medium auth-form-btn" asp-action="addproductsale">Back</a>
            </form>
        </div>
    </div>
</div>