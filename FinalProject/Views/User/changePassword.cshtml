@model ChangePass

@{
    //var userRoles = ViewBag.Role;
}


<div class="col-lg-12" style="border: 2px solid #424351; padding: 1rem 3rem; border-radius: 7px;">
    <form method="post" enctype="multipart/form-data" class="pt-3 ">
        <div class="m-3 d-inline-block col-lg-12">

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="Password" placeholder="Password" class="form-control form-control-lg border-left-0">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="ConfirmPassword" id="exampleInputPassword" placeholder="Password" class="form-control form-control-lg border-left-0">
                </div>
            </div>
        </div>
        <div class="m-3  d-inline-block ">
            <button type="submit" class="btn btn-primary btn-lg font-weight-medium auth-form-btn">Change Password</button>
        </div>
    </form>
</div>